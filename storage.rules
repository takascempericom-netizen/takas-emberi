rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // İlan görselleri: herkes okuyabilir, sadece sahibi yazabilir
    match /listings/{uid}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
    // Diğer her şey (ör. genel assetler) herkese okunur
    match /{allPaths=**} {
      allow read: if true;
    }
  }
}
